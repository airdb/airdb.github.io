---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";

const pageTitle: string = `Contact | ${SITE.title}`;
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://airdb.com",
    "@type": "WebPage",
    "@id": "https://airdb.com/contact",
    url: "https://airdb.com/contact",
    name: "Contact Us | airdb",
    description:
      "有疑问或想讨论项目吗？联系我们，让我们用我们的工具和服务打造完美的解决方案。",
    isPartOf: {
      "@type": "WebSite",
      url: "https://airdb.com",
      name: "airdb",
      description:
        "Airdb offers top-tier hardware tools and expert construction services to meet all your project needs.",
    },
    inLanguage: "en-US",
  }}
>
  <ContactSection />

  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Explore Airdb on GitHub"
    url="https://github.com/airdb"
  />
</MainLayout>
